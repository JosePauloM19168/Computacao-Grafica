function setup() {
    createCanvas(400, 400);
  }
  
  function draw() {
    background(255);
    translate(width/2, height);
    
    drawFractal(100)
  }
  
  function drawFractal(len) {
    if (len <5) {
      return;
      }
      line(0,0,0,-len);  // ou line(0,0,0,-100)
      translate(0,-len); // ou translate(0,-100);
  
  
  push();
    rotate(PI/6);
    drawFractal(len*0.66)
  pop();
    
    push();
    rotate(-PI/6);
    drawFractal(len*0.66)
    pop();
  }